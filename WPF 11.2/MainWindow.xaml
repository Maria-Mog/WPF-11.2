<Window x:Class="WPF_11._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_11._2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <Path Fill="Red" Stroke="Black" StrokeThickness="1.5">
            <Path.Data>
                <GeometryGroup >
                    <EllipseGeometry RadiusX="100" RadiusY="100" Center="300,220"/>
                    <EllipseGeometry RadiusX="80" RadiusY="80" Center="300,220"/>
                    <RectangleGeometry Rect="220,210,160,20">
                        <RectangleGeometry.Transform>
                            <RotateTransform Angle="-45" CenterX="300" CenterY="220"/>
                        </RectangleGeometry.Transform>
                    </RectangleGeometry>
                </GeometryGroup>
            </Path.Data>
        </Path>
    </Grid>
</Window>
